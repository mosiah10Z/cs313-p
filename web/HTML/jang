			function val(){
					var ph = document.forms["info"]["phone"].value;
					var phNum = /^(()?\d{3}())?(-|\s)?\d{3}(-|\s)?\d{4}$/; 
					if(ph.match(phNum)) {
							var cre = document.forms["info"]["cre"].value;
							var creNum = /^\d{16}$/; 
								if(cre.match(creNum)) {
									var date = document.forms["info"]["date"].value;
									var dateNum = /^([0-9]{2})$/;
									if(date.match(dateNum)){
										var year = parseInt(document.forms["info"]["year"].value);
										if(year > 2011){										
											alert("Thank you for shopping with us!");
											document.getElementById("phone").blur();
											document.getElementById("cre").blur();
											document.getElementById("date").blur();
											return true;
											}
											else if (year <= 2011){
												document.getElementById("year").focus();
												alert("Please type correct Year!");
												return false;
											}
										}
										else{
										document.getElementById("date").focus();
										alert("Please type date in correct format");
										return false;
										}
									}
								else {
									document.getElementById("cre").focus();
									alert("Please type 16 digits of numbers");
									return false;
								}
							}
					else {
						document.getElementById("phone").focus();
						alert("Please type phone number in the correct format");
						return false;
					}
						
				}			
			function welcome(){
				alert("Welcome to the best bow shop!!");
			}		
			function re(){
				alert("The form was reset");
			}
			function setFocusToTextBox(){
				document.getElementById("mytext").focus();
			}
			function total(){
				document.getElementById('an').value;
			}
	</script>
