			function cal1(){
				var total = parseInt(document.getElementById('an').value);
			
					if(document.getElementById('item1').checked == true)
					{
						total = total + 500;
						
					}					
					else if(document.getElementById('item1').checked == false)
					{
						total = total - 500;
					}
					document.getElementById('an').value=total;
				}
